<Page x:Class="QLD_HP_CTH.GVLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QLD_HP_CTH"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GVLogin" FontSize="20" Background="White">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" BorderThickness="2" BorderBrush="Purple"/>

        <Label Grid.Row="0" Grid.Column="0" Content="Nhập mã giảng viên" VerticalAlignment="Center"/>
        <TextBox Name="txtMaGV" Grid.Row="0" Grid.Column="1" Width="390" Height="30" />

        <Label Grid.Row="1" Grid.Column="0" Content="Nhập mật khẩu" VerticalAlignment="Center"/>
        <TextBox Name="txtMatKhauGV" Grid.Row="1" Grid.Column="1" Width="390" Height="30" />

        <Button Grid.Row="2" Grid.Column="1" Content="Đăng nhập" Width="200" Height="30" Click="dngv_Click"/>
    </Grid>
</Page>
