<Window x:Class="QLD_HP_CTH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLD_HP_CTH"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Background="Purple">
            <Button Content="Giảng viên"  Margin="0,0,1,0" Background="White" BorderThickness="0" Width="300" Click="btnGiangVien_Click"/>
            <Button Content="Sinh viên" Margin="1,0,1,0" Background="White" BorderThickness="0" Width="300" Click="btnSinhVien_Click" />
            <Button Content="Quản trị viên" Margin="1,0,0,0" Background="White" BorderThickness="0" Width="300" Click="btnQuanTriVien_Click" />
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Purple" BorderThickness="1" Margin="5"/>
        <Frame Grid.Row="1" Name="login" Margin="5" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
